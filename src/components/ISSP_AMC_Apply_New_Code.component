<apex:component controller="ISSP_AMC_Apply_New_Code" allowDML="true">


	<div class="container">
		<apex:form id="appnewcodeFrm">
			<div class="row">
				<section name="left-side-agency-accred" class="col-md-12">
					<header>
                        <div>
                            <h2 class="subtitle">{!$Label.ISSP_AMC_APPLY_NEW_CODE}</h2>
                            <div class="redFringe"></div>
                        </div>
                    </header>
	                <div class="col-md-12">
            			<hr/>
  					</div>
	                <div class="row">
	                    <div class="col-md-5">
	                        <apex:commandButton styleClass="btn btn_iata_primary" action="{!navigateAirlineDesignators}" value="{!$Label.ISSP_AMC_AIRLINE_DESIGNATOR_CHANGE}" status="Loading" rerender="appnewcodeFrm"/>
	                    </div>
	                    <div class="col-md-7">
	                        <apex:outputText value="{!$Label.ISSP_AMC_AIRLINE_DESIGNATORS_DESC}" escape="false"/>
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-7 col-md-offset-5">
	                        <apex:commandLink value="{!$Label.ISSP_AMC_CHECK_THE_REQUIREMENTS}"/>
	                    </div>
	                </div>
	                <div class="col-md-12">
            			<hr/>
  					</div>
	                <div class="row">
	                    <div class="col-md-5">
	                        <apex:commandButton styleClass="btn btn_iata_primary" action="{!navigateAccountingOrPrefixCode}" value="{!$Label.ISSP_AMC_ACCOUNTING_OR_PREFIX_CODE}" status="Loading" rerender="appnewcodeFrm"/>
	                    </div>
	                    <div class="col-md-7">
	                        <apex:outputText value="{!$Label.ISSP_AMC_ACCOUNTING_OR_PREFIX_CODE_DESC}" escape="false"/>
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-7 col-md-offset-5">
	                        <apex:commandLink value="{!$Label.ISSP_AMC_CHECK_THE_REQUIREMENTS}"/>
	                    </div>
	                </div>
	                <div class="col-md-12">
            			<hr/>
  					</div>
	                <div class="row">
	                    <div class="col-md-5">
	                        <apex:commandButton styleClass="btn btn_iata_primary" action="{!navigateLocationIdentifier}" value="{!$Label.ISSP_AMC_Location_Identifier_Code}" status="Loading" rerender="appnewcodeFrm"/>
	                    </div>
	                    <div class="col-md-7">
	                        <apex:outputText value="{!$Label.ISSP_AMC_LOCATION_IDENTIFIER_DESC}" escape="false"/>
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-7 col-md-offset-5">
	                        <apex:commandLink value="{!$Label.ISSP_AMC_CHECK_THE_REQUIREMENTS}"/>
	                    </div>
	                </div>
	                <div class="col-md-12">
            			<hr/>
  					</div>
	                <div class="row">
	                    <div class="col-md-5">
	                        <apex:commandButton styleClass="btn btn_iata_primary" action="{!navigateBaggageTagRange}" value="{!$Label.ISSP_AMC_BAGGAGE_TAG_RANGE_CODE}" status="Loading" rerender="appnewcodeFrm"/>
	                    </div>
	                    <div class="col-md-7">
	                        <apex:outputText value="{!$Label.ISSP_AMC_BAGAGE_TAG_RANGE_DESC}" escape="false"/>
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-7 col-md-offset-5">
	                        <apex:commandLink value="{!$Label.ISSP_AMC_CHECK_THE_REQUIREMENTS}"/>
	                    </div>
	                </div>
	                <div class="col-md-12">
            			<hr/>
  					</div>
					
					<apex:outputPanel id="popupDeleteSection" rendered="{!IF(isThereACase == true,true,false)}">
						<div class="test">

                      <apex:outputPanel styleClass="PopupBackground section-header modal-content" layout="black" >
                          <apex:outputPanel styleClass="Content" layout="black" > 
	                           <center>
	                           		<apex:outputLabel value="{!$Label.ISSP_AMC_EXISTING_CASE}" />
	                           		<div>
	                           			<apex:commandButton value="View Case" action="{!redirectToCase}" styleClass="btn btn_iata_primary"/>
	                           			<apex:commandButton value="Cancel" action="{!closePopupDeleteSection}" reRender="appnewcodeFrm" styleClass="btn btn_iata_primary"/>

	                           		</div>
	                           		
	                           	</center>
                            </apex:outputPanel>
                        </apex:outputPanel>         
					</div>
                    </apex:outputPanel>

				

	            </section>
			</div>
		</apex:form>
	</div>

<style type="text/css">
.test {
				background: radial-gradient(rgba(0, 0, 0,.8), rgba(0, 0, 0, .5)4%);
		        position: fixed;
		        z-index: 9998;
		        margin: auto;
				top: 0;
				left: 0;
				bottom: 0;
				right: 0;
			}
	
	.PopupBackground {
				
			position: fixed;
			top: 50%;
			left: 50%;
			/* bring your own prefixes */
			transform: translate(-50%, -50%);

	        position: fixed;
	        z-index: 9998;
	        margin: auto;
			color: black;
			text-align: center;
			background-color: white;
			border: 1px solid rgba(0,0,0,.2);
		    border-radius: 6px;
		    outline: 0;
		    padding: 1%;
	}


	.content{
        background-color: white;
        border-width: 8px;
        border-style: solid;
        z-index: 9999;
        padding:10px;
        position: fixed;
        margin: auto;
        
    }
</style>
	


</apex:component>
