        }
        i++;
     }
    if(isExternalDocumentLink)
    {
        category = "Fichiers externes";
        action = e.hostname + lnk;
    }
    else if(isSocialLink)
    {
        category = "Liens externes - M??dias sociaux";
        action = e.hostname + lnk;
        
