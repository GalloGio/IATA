            <apex:inputField styleclass="date" value="{!ctrl.newform.Desired_date_to_start_in_SIS__c}"/>
        </apex:pageBlockSectionItem>

    </apex:pageBlockSection>

    <apex:pageBlockSection columns="1" id="section2" collapsible="true">
