    </tbody>
    
</table>

        <apex:outputPanel id="panelMostPopular" rendered="{!iNbrRatePlans==0}">
            No rate plans found for: {!sProductCategoryCode}<br />
        </apex:outputPanel>
    </apex:componentBody>
</apex:component>