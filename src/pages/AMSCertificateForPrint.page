<apex:page showHeader="false" sidebar="false" applyHtmlTag="fasle" applyBodyTag="false" standardStylesheets="false" renderAs="pdf" controller="AMS_CertificateForPrintController">
	<html>
	<head>
		<title>Certificate</title>

		<style>
				@page{
					size: A4 landscape;
					margin: :0.1in;
				}
	
				.tabeStyle{
					width: 100%;
					height: 100%;
				}
		</style>
	</head>
	<body>
		<apex:repeat value="{!certificates}" var="page">
			<apex:repeat value="{!page}" var="acc">
				<table class="tabeStyle" id="myTable">
					<tr style="height: 223px;">
						<td style="width: 50%;">
							<div class="headerImg">
								
							</div>
							<div style="font-size: 2.2em;">
							</div>
							<div style="line-height: 30px;">
							</div>
						</td>
						<td style="width: 50%;">
								
						</td>
					</tr>
					<tr  style="height: 223px;">
						<td colspan="2">
							<div style="height:50px;font-size: 2.7em;">
								<apex:outputText value="{!acc.Name}"/>
							</div>
							<div style="height:70px;font-size: 25px;">
								<apex:outputText value="{!acc.TradeName__c}"/><br></br>
								<apex:outputText value="{!acc.BillingCity}"/>,&nbsp;<apex:outputText value="{!acc.IATA_ISO_Country__r.Name}"/>
							</div>
							<div  style="height:40px;">
							</div>
							<div  style="height:40px;">
								<table>
									<tr>
										<td style="width:33.3%;font-size: 13px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<apex:outputText value="{!acc.IATACode__c}"/></td>
										<td style="width:33.3%;font-size: 13px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {!allLabels['CertificateValidity'].Certificate_Validity__c}</td>
										<td style="width:33.3%;font-size: 13px;"></td>
									</tr>
								</table>
							</div>
						</td>
					</tr>
					<tr  style="height: 223px;">
						<td>
							<table  style="height:200px;width: 100%;">
								<tr>
									<td>
										
									</td>
									<td style="width:20px;">
									</td>
									<td>
										
									</td>
								</tr>
								<tr style="position: relative;">
									<td style="font-size: 10px;width:200px;">
										
									</td>
									<td style="width:20px;">
									</td>
									<td style="font-size: 10px;width:170px;margin-left:20px;">
										
									</td>
									<td>
										<div style="position: absolute;color: #dddddd;opacity: 0.2;font-size: 9em;font-weight: bold;top:-80%;z-index: -999;">
											{!IF(ISBLANK($CurrentPage.Parameters.year), YEAR(TODAY()), $CurrentPage.Parameters.year)}
										</div>
									</td>
								</tr>
							</table>
						</td>
					</tr>
				</table>
			</apex:repeat>
		</apex:repeat>
	</body>
	</html>
</apex:page>