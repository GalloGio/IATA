    <apex:outputPanel id="AmazonS3Form">
    <div style="display:none;">
    <iframe id="iframe2" name="iframe2" ></iframe>
    </div>
    <form id="sendFileFormId" method="post" enctype="multipart/form-data" action="{!AMAZONURL}" target="iframe2" >
