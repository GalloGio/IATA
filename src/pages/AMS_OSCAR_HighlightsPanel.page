    <style>
    
        h1{
            font-size: 150%;
        }
        table{
            table-layout: fixed;
            font-size: 110%;
        }
        
        head {
            font-size: 16 pt;
        }
        body .bPageBlock .pbBody .labelCol, body .bPageBlock .pbBody .dataCol, body .bPageBlock .pbBody .data2Col, body .print .topics-label, body .print .topics-list{
            padding-top: 2px;
            padding-bottom: 2px;
        }

        .overlay{
            height: 100%;
            width: 100%;
            position: fixed;
            z-index: 100;
            top: 0;
            left: 0;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0, 0.85);
            overflow-x: hidden;
        }

        .overlay-content {
            position: relative;
            top: 15%;
            width: 100%;
            text-align: center;
            margin-top: 10px;
        }

        .overlay a:hover, .overlay a:focus {
            color: #f1f1f1;
        }

        .overlay a:visited {
            color: #666666;
        }

        .overlay p, ul, li {
            padding: 8px;
            text-decoration: none;
            font-size: 22px;
            color: #818181;
            display: block; /* Display block instead of inline */
            transition: 0.3s; /* Transition effects on hover (color) */
        }

        .overlay ul, li {
            font-size: 14px;
            color: #818181;
            text-align: left;
            display: block; /* Display block instead of inline */
            line-height: 30%;
        }
    </style>
    
