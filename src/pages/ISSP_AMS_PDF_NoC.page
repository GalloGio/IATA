<apex:page renderAs="pdf" controller="ISSP_AMS_Accreditation"
           cache="false"
           sidebar="false"
           showHeader="false"
           standardStylesheets="false"
           language="{!displayLanguage}"
           applyBodyTag="false"
           >
    <head>
        <style>
            body { font-family: 'Arial Unicode MS'; font-size: 15px }
           
            .col1 {
                padding-bottom:5px;
                width:40%;
                vertical-align: text-top;
                font-weight:bold
            }
            
            .col1_regular {
                padding-bottom:5px;
                width:25%;
                vertical-align: text-top;
                font-weight:bold
            }
            
            .col2 {width:60%; padding-left:50px;vertical-align: text-top;}
            .col2_regular {width:25%; padding-left:50px;vertical-align: text-top;}
            .col2_4 {width:10%;padding-left:5px;vertical-align: text-top;}
            .col3 {width:50%}
            
            .pbSubheader {
            color: #fff;
            padding-left:10px;
            padding-top: 1px;
            padding-bottom: 0px;
            font-weight:700;
            background-color: #337ab7;
            width:100%
            }
            
            .pdf-label {
                font-weight: 700;
            }
            
            .pdfHeader {
                font-weight: bold;
                font-size: 110%;
                background-color: rgb(242,242,242)
            }
            
            .pdfFooter {
                font-weight: bold;
                font-size: 110%;
                background-color: rgb(227,227,215)
            }
            th {
                font-size: 110%;
            }
            
            @page {
            margin-top: 3.5cm;
            margin-bottom: 2cm;
            margin-left: 0.5cm;
            margin-right: 0.5cm;
            @top-center {content: element(header);}
            @bottom-left {content: element(footer);font-size: 80%;}
            }

            div.header {padding: 10px;position: running(header);}
            div.footer {display: block;padding: 5px;position: running(footer);}
          
            .pagenumber:before {content: counter(page);}
            .pagecount:before {content: counter(pages);}
        </style>
    </head>
    
    <body>
        <div class="header">
            <div><apex:image width="100%" value="{!URLFOR($Resource.AP_PDF_Header)}"/></div>
        </div>
          
         <center>
             <h2 class="panel-title"><apex:outputText escape="false" value="{!$Label.ISSP_AMS_NoC_PDF_Title}"/></h2>        
        </center>
       
        <div class="footer">
            <table border="0" width="100%">
                <tr>
                    <td width="33%" align="left">
                        {!DAY(TODAY())}&nbsp;
                        {!CASE(MONTH(TODAY()),
                        1, "January",
                        2, "February",
                        3, "March",
                        4, "April",
                        5, "May",
                        6, "June",
                        7, "July",
                        8, "August",
                        9, "September",
                        10, "October",
                        11, "November",
                        12, "December",
                        "None")}&nbsp;{!YEAR(TODAY())}
                    </td>
                    <td width="33%" align="center">
                        <a href="http://www.iata.org">www.iata.org</a>
                    </td>
                    <td width="33%" align="right">
                        <apex:outputText value="{!$Label.ISSP_AMS_PDF_Initials_Here}"/><br/>
                        <apex:outputText value="{!$Label.ISSP_AMS_PDF_Page}"/> <span class="pagenumber"/> of <span class="pagecount"/>
                    </td>
                </tr>
            </table>
        </div>
        
        <apex:pageBlock >
        <apex:include pageName="ISSP_AMS_NoC_ReadOnly"/>
        <apex:form >
            <div style="font-size:13px">             
                <p style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'','none')}">    
<apex:outputText escape="false" value="{!IF(BEGINS(sectorValue,'Cargo_Agent'), IF(agencyCategory='IATA Cargo Agent', IF(isocountry.EACP_Country__c, $Label.ISSP_AMS_NoC_TC_Change_EACP, IF(newlabels, $Label.ISSP_AMS_NoC_TC_Change_CGO_New, $Label.ISSP_AMS_NoC_TC_Change_CGO)), $Label.ISSP_AMS_NoC_TC_Change_CASS), $Label.ISSP_AMS_NoC_Bank_Change1)}"/>
               </p>
                <p style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'','none')}">
<apex:outputText escape="false" value="{!IF(BEGINS(sectorValue,'Cargo_Agent'), IF(agencyCategory='IATA Cargo Agent', IF(isocountry.EACP_Country__c, $Label.ISSP_AMS_NoC_TC_Change_EACP2, IF(newlabels, $Label.ISSP_AMS_NoC_TC_Change_CGO2_New, $Label.ISSP_AMS_NoC_TC_Change_CGO2)), ''), $Label.ISSP_AMS_NoC_Bank_Change2)}"/>
                    </p>
                <p style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'','none')}">
<apex:outputText escape="false" value="{!IF(BEGINS(sectorValue,'Cargo_Agent'), IF(agencyCategory='IATA Cargo Agent', IF(isocountry.EACP_Country__c, $Label.ISSP_AMS_NoC_TC_Change_EACP3, IF(newlabels, $Label.ISSP_AMS_NoC_TC_Change_CGO3_New, $Label.ISSP_AMS_NoC_TC_Change_CGO3)), ''), $Label.ISSP_AMS_NoC_Bank_Change3)}"/>
                    </p>

                <p style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'none','')}">
                {!$Label.ISSP_AMS_NoC_TC}
                </p>
            </div>

        <!-- Signatures -->
        <apex:outputPanel rendered="{!sectorValue!='Travel_Agent'}">
          <table border="0" cellpadding="3">
              <tr><th colspan="2">{!IF(newForm.Is_change_ownership_or_shareholding__c,$Label.ISSP_AMS_NoC_Transferor , $Label.ISSP_AMS_NoC_Authorized_Signature)}</th><th style="width:10%">&nbsp;</th><th>{!$Label.ISSP_AMS_NoC_Witness}</th><th></th></tr>
              <tr><td>{!$Label.ISSP_AMS_NoC_Signature}</td><td>________________________</td><td style="width:10%">&nbsp;</td><td>{!$Label.ISSP_AMS_NoC_Signature}</td><td>________________________</td></tr>
              <tr><td style="padding-bottom:15px">{!$Label.IFAP_name}</td><td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td><td style="width:10%">&nbsp;</td><td style="padding-bottom:15px">{!$Label.ISSP_AMS_NoC_Name_address}</td><td>________________________</td></tr>
            <tr><td style="padding-bottom:30px"><apex:outputText value="{!$Label.ISSP_AMS_NoC_title_or_capacity}" escape="false"/></td><td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td><td style="width:10%">&nbsp;</td><td>&nbsp;</td><td>________________________</td></tr>
              <tr><td>{!$Label.ISSP_Date}</td><td>________________________</td><td style="width:10%">&nbsp;</td><td>{!$Label.ISSP_Date}</td><td>________________________</td></tr>
          </table>
          <br/>  
          <table style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'','none')}" border="0" cellpadding="3">
              <tr><th colspan="2">{!$Label.ISSP_AMS_NoC_Transferee}</th><th style="width:10%">&nbsp;</th><th>{!$Label.ISSP_AMS_NoC_Witness}</th><th></th></tr>
              <tr><td>{!$Label.ISSP_AMS_NoC_Signature}</td><td>________________________</td><td style="width:10%">&nbsp;</td><td>{!$Label.ISSP_AMS_NoC_Signature}</td><td>________________________</td></tr>
              <tr><td style="padding-bottom:15px">{!$Label.IFAP_name}</td><td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td><td style="width:10%">&nbsp;</td><td style="padding-bottom:15px">{!$Label.ISSP_AMS_NoC_Name_address}</td><td>________________________</td></tr>
              <tr><td style="padding-bottom:30px"><apex:outputText value="{!$Label.ISSP_AMS_NoC_title_or_capacity}" escape="false"/></td><td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td><td style="width:10%">&nbsp;</td><td>&nbsp;</td><td>________________________</td></tr>
              <tr><td>{!$Label.ISSP_Date}</td><td>________________________</td><td style="width:10%">&nbsp;</td><td>{!$Label.ISSP_Date}</td><td>________________________</td></tr>
          </table>
          <br/>
        </apex:outputPanel>
        <apex:outputPanel rendered="{!sectorValue=='Travel_Agent'}">
            <apex:repeat value="{!List_PreviousOwners}" var="transferorOwner">
                <div class="row" style="width:50%; float:left; page-break-inside:avoid; margin-top:20px;">
                    <table border="0" cellpadding="3">
                        <tr>
                            <th colspan="2">{!IF(newForm.Is_change_ownership_or_shareholding__c,$Label.ISSP_AMS_NoC_Transferor , $Label.ISSP_AMS_NoC_Authorized_Signature)}</th>
                        </tr>
                        <tr>
                            <td>{!$Label.ISSP_AMS_NoC_Signature}</td>
                            <td>________________________</td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:15px">{!$Label.IFAP_name}</td>
                            <td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:30px"><apex:outputText value="{!$Label.ISSP_AMS_NoC_title_or_capacity}" escape="false"/></td>
                            <td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td>
                        </tr>
                        <tr>
                            <td>{!$Label.ISSP_Date}</td>
                            <td>________________________</td>
                        </tr>
                    </table>
                </div>
            </apex:repeat>
            <apex:repeat value="{!List_CurrentOwners}" var="transfereeOwner">
                <div class="row" style="width:50%; float:left; page-break-inside:avoid; margin-top:20px;">
                    <table border="0" cellpadding="3">
                        <tr>
                            <th colspan="2">{!$Label.ISSP_AMS_NoC_Transferee}</th>
                        </tr>
                        <tr>
                            <td>{!$Label.ISSP_AMS_NoC_Signature}</td>
                            <td>________________________</td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:15px">{!$Label.IFAP_name}</td>
                            <td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:30px"><apex:outputText value="{!$Label.ISSP_AMS_NoC_title_or_capacity}" escape="false"/></td>
                            <td>________________________<br/>{!$Label.ISSP_AMS_NoC_type_or_print}</td>
                        </tr>
                        <tr>
                            <td>{!$Label.ISSP_Date}</td>
                            <td>________________________</td>
                        </tr>
                    </table>
                </div>
            </apex:repeat>
            <div class="row" style="width:100%; float:left; page-break-inside:avoid; margin-top:20px;">
                <table border="0" cellpadding="3">
                    <tr>
                        <th colspan="2">{!$Label.ISSP_AMS_NoC_Witness}</th>
                    </tr>
                    <tr>
                        <td>{!$Label.ISSP_AMS_NoC_Signature}</td>
                        <td>________________________</td>
                    </tr>
                    <tr>
                        <td style="padding-bottom:15px">{!$Label.ISSP_AMS_NoC_Name_address}</td>
                        <td>________________________</td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>________________________</td>
                    </tr>
                    <tr>
                        <td>{!$Label.ISSP_Date}</td>
                        <td>________________________</td>
                    </tr>
                </table>
            </div>
        </apex:outputPanel>

        <div class="row" style="width: 100%; float:left; page-break-inside:avoid; margin-top:30px;">
          <table style="display:{!IF(newForm.Is_change_ownership_or_shareholding__c,'','none')};border:1px solid #000;margin-left:100px" cellpadding="3">
              <tr style="border:none;font-weight:bold;color:red"><td>{!$Label.ISSP_AMS_NoC_IATA_Only}</td></tr>
              <tr style="border:none"><th>{!$Label.ISSP_AMS_NoC_IATA_Acknowledged}</th></tr>
              <tr style="border:none"><td>____________________<br/>{!$Label.ISSP_AMS_NoC_IATA_Admin}</td></tr>
              <tr style="border:none"><td>____________________<br/>{!$Label.ISSP_Date}</td></tr>
          </table>
        </div>

    </apex:form>
    </apex:pageBlock>
</body>
</apex:page>