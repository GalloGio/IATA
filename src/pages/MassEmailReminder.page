                     </apex:inputCheckbox>
                </apex:facet>
                <apex:inputCheckbox value="{!c.Selected}" id="accSelected">
                    <apex:actionSupport event="onclick" action="{!updateNbrSelectedRecords}" reRender="NbrRecordsPanel" />
                </apex:inputCheckbox>
                
