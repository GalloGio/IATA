                </select>
           </td>
      </tr>
     
      <tr>
        <td> 
            <apex:actionRegion >
                    <button id="btnSearch" type="button" title="Search" onclick="doSearch();" style="cursor:pointer">Search</button>
            </apex:actionRegion>
        </td>
      </tr>
      </table>
 
      </apex:pageBlock>
 
