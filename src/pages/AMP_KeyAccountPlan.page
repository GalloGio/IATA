        <apex:outputPanel id="js">


      <!-- JAVASCRIPT -->
      <apex:includeScript value="{!$Resource.jQuery172}" />
      <apex:includeScript value="{!URLFOR($Resource.AMP_helper,'js/general.js')}" />
        <script>
        $(document).ready(function(){
          enableShowMoreOrLess();
        });
      </script>
    </apex:outputPanel>
    </body>


</html>
</apex:page>