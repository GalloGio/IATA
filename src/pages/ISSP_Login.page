   <script>
    $(document).ready(function() {
        $('link[title="bs"]')[0].disabled=true;
    });
    </script>

    <script>
    function changeLanguageLocaleKey() {
        var lang = $("#LanguageLocaleKeySelect option:selected").val();
        window.location.href = "/ISSP_Login?lang="+lang;
    }
    </script>

</apex:page>
