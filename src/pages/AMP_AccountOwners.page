<apex:page showHeader="true" sidebar="true" standardController="Account" extensions="AMP_OwnershipController">
	<apex:pageMessages />

	<apex:form >
		<apex:pageBlock >
			<apex:outputPanel id="OwnersTable">
				<h2>Owners</h2>

				<apex:pageBlockTable value="{!lstOwners}" var="item">

					<apex:column style="width: 80px;">
	                    <apex:facet name="header">Actions</apex:facet>

	                    <apex:commandLink value="Del" action="{!DeleteLine}" onclick="if(!confirm('Are you sure you want to delete this line?')){return false};" rendered="{!IF(OR(AND(isEditMode, IdConcerned==item.Id), NOT(canEdit)), false, true)}" >
                    		<apex:param name="IdConcerned" value="{!item.Id}" assignTo="{!IdConcerned}"/>
                    	</apex:commandLink>
                    	&nbsp;
                    	<apex:commandLink value="Edit" action="{!EditLine}" rerender="OwnersTable" rendered="{!IF(OR(AND(isEditMode, IdConcerned==item.Id), NOT(canEdit)), false, true)}" >
                    		<apex:param name="IdConcerned" value="{!item.Id}" assignTo="{!IdConcerned}"/>
                    	</apex:commandLink>

                    	<apex:commandLink value="Save" action="{!SaveLine}" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), true, false)}" >
                    		<apex:param name="IdConcerned" value="{!item.Id}" assignTo="{!IdConcerned}"/>
                    	</apex:commandLink>
                    	&nbsp;
                    	<apex:commandLink value="Cancel" action="{!CancelEdit}" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), true, false)}" >
                    		<apex:param name="IdConcerned" value="{!item.Id}" assignTo="{!IdConcerned}"/>
                    	</apex:commandLink>
	            	</apex:column>

	            	<apex:column >
	            		<apex:facet name="header">Account Name</apex:facet>

	            		<apex:inputField value="{!item.Owner_Account__c}" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), true, false)}" style="width: 80%;" />
            			<apex:outputLink value="/{!item.Owner_Account__c}" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), false, true)}" target="_blank">{!item.Owner_Account__r.Name}</apex:outputLink>

	            	</apex:column>

	            	<apex:column >
	            		<apex:facet name="header">Owner Type</apex:facet>

            			<apex:outputField value="{!item.Owner_Account__r.Membership_status__c}" />
	            	</apex:column>

	            	<apex:column >
	            		<apex:facet name="header">Percentage Held</apex:facet>

	            		<apex:inputField value="{!item.Percentage__c}" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), true, false)}" style="width: 90%;" />

            			<apex:outputText value="{0,number,0}%" rendered="{!IF(AND(isEditMode, IdConcerned==item.Id), false, true)}" >
						    <apex:param value="{!item.Percentage__c}" />
						</apex:outputText>
	            	</apex:column>

				</apex:pageBlockTable>

				<apex:commandButton action="{!AddNewOwner}" value="Add New Owner" rendered="{!IF(OR(isEditMode, NOT(canEdit)), false, true)}" />
			</apex:outputPanel>



		</apex:pageBlock>

	</apex:form>
</apex:page>
