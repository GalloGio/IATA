<apex:page renderAs="pdf" controller="ISSP_AMS_Accreditation"
           cache="false"
           sidebar="false"
           showHeader="false"
           standardStylesheets="false"
           language="{!displayLanguage}"
           applyBodyTag="false"
           >
    <head>
  		<style>
            body { font-family: 'Arial Unicode MS'; font-size: 15px }
           
            .col1 {
            	padding-bottom:5px;
            	width:40%;
    			vertical-align: text-top;
            	font-weight:bold
            }
            
            .col1_regular {
            	padding-bottom:5px;
            	width:25%;
    			vertical-align: text-top;
            	font-weight:bold
            }
            
        	.col2 {width:60%; padding-left:50px;vertical-align: text-top;}
            .col2_regular {width:25%; padding-left:50px;vertical-align: text-top;}
            .col2_4 {width:10%;padding-left:5px;vertical-align: text-top;}
            .col3 {width:50%}
    		
            .pbSubheader {
    		color: #fff;
            padding-left:10px;
            padding-top: 1px;
            padding-bottom: 0px;
            font-weight:700;
    		background-color: #337ab7;
            width:100%
			}
            
            .pdf-label {
            	font-weight: 700;
            }
            
            .pdfHeader {
            	font-weight: bold;
            	font-size: 110%;
            	background-color: rgb(242,242,242)
            }
            
            .pdfFooter {
            	font-weight: bold;
            	font-size: 110%;
            	background-color: rgb(227,227,215)
            }
            
            @page {
			margin-top: 3.5cm;
			margin-bottom: 2cm;
			margin-left: 0.5cm;
			margin-right: 0.5cm;
			@top-center {content: element(header);}
			@bottom-left {content: element(footer);font-size: 80%;}
			}

			div.header {padding: 10px;position: running(header);}
			div.footer {display: block;padding: 5px;position: running(footer);}
          
			.pagenumber:before {content: counter(page);}
			.pagecount:before {content: counter(pages);}
    	</style>
    </head>
    
    <body>
        <div class="header">
            <div><apex:image width="100%" value="{!URLFOR($Resource.AP_PDF_Header)}"/></div>
        </div>
          
         <center>
            <h2 class="panel-title">APPLICATION FOR APPROVAL</h2>
            <h2 class="panel-title">{!newForm.Agent_Type__c}</h2>
        </center>

        <div class="footer">
            <table border="0" width="100%">
                <tr>
                    <td width="33%" align="left">
                        {!DAY(TODAY())}&nbsp;
                        {!CASE(MONTH(TODAY()),
                        1, "January",
                        2, "February",
                        3, "March",
                        4, "April",
                        5, "May",
                        6, "June",
                        7, "July",
                        8, "August",
                        9, "September",
                        10, "October",
                        11, "November",
                        12, "December",
                        "None")}&nbsp;{!YEAR(TODAY())}
                    </td>
                    <td width="33%" align="center">
                        <a href="http://www.iata.org">www.iata.org</a>
                    </td>
                    <td width="33%" align="right">
                        Page <span class="pagenumber"/> of <span class="pagecount"/>
                    </td>
                </tr>
            </table>
        </div>
        
        <apex:pageBlock >
        <apex:form >
            <div style="font-size:13px">
            <c:ISSP_AMS_CGO_ReadOnly rendered="{!AND(BEGINS(sectorValue,'Cargo_Agent'),OR(newForm.Agent_Type__c == 'IATA Cargo Agent',newForm.Agent_Type__c=='EACP Intermediary'),amsOfficeType=='HO')}"/>
            <c:ISSP_AMS_CASS_HO_ReadOnly rendered="{!AND(BEGINS(sectorValue,'Cargo_Agent'),AND(newForm.Agent_Type__c != 'IATA Cargo Agent',newForm.Agent_Type__c!='EACP Intermediary'),amsOfficeType=='HO')}"/>
            <c:ISSP_AMS_CGO_BR_ReadOnly rendered="{!AND(BEGINS(sectorValue,'Cargo_Agent'),amsOfficeType=='Branch')}"/>    
                    
           <!-- Display terms and conditions for CGO -->
         	<c:ISSP_AMS_CGO_T_Cs ></c:ISSP_AMS_CGO_T_Cs>
  <apex:outputPanel rendered="{!OR(newForm.Agent_Type__c=='IATA Cargo Agent',newForm.Agent_Type__c=='EACP Intermediary')}">         
  <table border="0" cellpadding="3">
      <tr><th></th><th>Signatory:</th><th style="width:10%">&nbsp;</th><th>Witness:</th><th></th></tr>
      <tr><td>Signature</td><td>____________________</td><td style="width:10%">&nbsp;</td><td>Signature</td><td>____________________</td></tr>
      <tr><td style="padding-bottom:15px">Name</td><td>____________________<br/>(type or print)</td><td style="width:10%">&nbsp;</td><td style="padding-bottom:15px">Name &amp; address</td><td>____________________</td></tr>
      <tr><td style="padding-bottom:30px">Title or<br/>capacity</td><td>____________________<br/>(type or print)</td><td style="width:10%">&nbsp;</td><td>&nbsp;</td><td>____________________</td></tr>
      <tr><td>Date</td><td>____________________</td><td style="width:10%">&nbsp;</td><td>Date</td><td>____________________</td></tr>
  </table>
  </apex:outputPanel>
            </div>   
        </apex:form>
        </apex:pageBlock>
    </body>    
</apex:page>