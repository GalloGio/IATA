					<apex:outputLabel for="oneQuarter" value="{!thisQuarter}" />
					<apex:outputText id="oneQuarter" value="{!quarterUserSizeMap[thisQuarter]} ({!quarterUserPercentMap[thisQuarter]}%)" />
				</apex:pageBlockSectionItem>
			</apex:repeat>
		</apex:pageBlockSection>
