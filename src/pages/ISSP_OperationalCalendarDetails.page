            </div>
            <div class="col-sm-1"></div>
        </div>
        <div class="center">
          <button type="button" class="btn btn-default btn-calendar center-block" onclick="showCalendar()">{!$Label.ISSP_OperationalCalendar_Show_Calendar}</button>
        </div>
    
