        <apex:column styleclass="text-width-xs">
          <apex:facet name="header">{!$ObjectType.operational_Calendar__c.fields.CASS_reports_Availability__c.label}</apex:facet>
          <apex:outputText value="{0,date,d MMM yyyy}">
