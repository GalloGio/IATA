<link href="{!URLFOR($Resource.ISSP_OperationalCalendar, '/lib/datatable/css/buttons.dataTables.min.css')}" rel="stylesheet"/>
<link href="{!URLFOR($Resource.ISSP_OperationalCalendar, '/css/details.min.css')}" rel="stylesheet"/>
<link href="//fonts.googleapis.com/css?family=Roboto:100,400,500" rel="stylesheet"/> 

<script>
    var MAP_FREQUENCIES = {!mapFrequenciesJson};
    var MAP_OPERATION_TYPES = {!mapOperationTypesJson};
    var MAP_CURRENCIES = {!mapCurrenciesJson};
    var isAirline = {!isAirline};
    var defaultCountry = "{!defaultCountry}";
    var defaultOperationType = "{!defaultOperationType}";
    
    $(document).ready(function() {
        initTable();
        
        if (isAirline) {
            $(".countryFilter").val(defaultCountry);
            updateFrequencyPicklist(defaultCountry);
            updateOperationTypesPicklist(defaultCountry);
            updateCurrencyPicklist(defaultCountry);
            refreshDetails();
        }
        if (!isAirline) {
            refreshDetails();
        }
        $(".countryFilter").change(function() {
            updateFrequencyPicklist($(this).val());
            updateOperationTypesPicklist($(this).val());
            updateCurrencyPicklist($(this).val());
            refreshDetails();
        });
        $("#frequencyFilter").change(function() {
            refreshDetails();
        });
        $("#typeFilter").change(function() {
            var isCASS = $(this).val().includes("CASS");
            if (isCASS) $("#frequencyFilter").val("");
            $("#frequencyFilter").prop('disabled', isCASS);
            refreshDetails();
        });
        $("#currencyFilter").change(function() {
            refreshDetails();
        });
        $('#billingPeriodFilter').change(function() {
            refreshDetails();
        });
    });
    
    function initTable() {
        var table = $('.table-pagination').dataTable({
            "dom": 'rtlp',
            buttons: [
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                }
            ],
            "language": {
                  "lengthMenu": "{!$Label.ISSP_Display_Records_per_page}",
                  "zeroRecords": "{!$Label.ISSP_Nothing_found}",
                  "info": "{!$Label.ISSP_Showing_page}",
                  "infoEmpty": "{!$Label.ISSP_No_records_available}",
                  "infoFiltered": "{!$Label.ISSP_filtered_from_total_records}",
                  "search": "{!$Label.ISSP_Search}",
                  "paginate": {
                    "next": "{!$Label.ISSP_Next}",
                    "previous": "{!$Label.ISSP_Previous}"
                  }
              },
            "paging":   true,
            "ordering": true,
            "info":     true
        });
        
        new $.fn.dataTable.Buttons(table, {
            buttons: [{
                extend: 'csvHtml5',
                exportOptions: {columns: ':visible'},
                title: function () { return getExportFileName();}
            }]
        }).container().appendTo($('#exportCSV'));
        new $.fn.dataTable.Buttons(table, {
            buttons: [{
                extend: 'pdfHtml5',
                exportOptions: {columns: ':visible'},
                title: function () { return getExportFileName();},
                orientation: 'landscape',
                customize: function ( doc ) {
                    doc.content.splice( 0, 0, {
                        margin: [ 0, 0, 0, 0 ],
                        alignment: 'left',
                        image: iata_logo
                    } );
                }
            }]
        }).container().appendTo($('#exportPDF'));
    }
    
    function updateFrequencyPicklist(countryValue) {
        var inputSelect = $("#frequencyFilter");
        var listValues = MAP_FREQUENCIES[countryValue];
        updatePicklist(inputSelect, listValues);
    }
    
    function updateOperationTypesPicklist(countryValue) {
        var inputSelect = $("#typeFilter");
        var listValues = MAP_OPERATION_TYPES[countryValue];
        updatePicklist(inputSelect, listValues);
    }
    
    function updateCurrencyPicklist(countryValue) {
        var inputSelect = $("#currencyFilter");
        var listValues = MAP_CURRENCIES[countryValue];
        updatePicklist(inputSelect, listValues);
    }
    
    function updatePicklist(inputSelect, listValues) {
        if (!isAirline) return;
        inputSelect.find('option').remove();
        if (listValues.length>1) {
            inputSelect.append($('<option>', {
                value: '',
                text : '{!$Label.ANG_ISSP_Picklist_None}'
            }));
        }
        $.each(listValues.sort(), function (i, item) {
            inputSelect.append($('<option>', {
                value: item,
                text : item
            }));
        });
    }
    
    function refreshDetails() {
        if (isAirline) refreshDetailsForAirlines();
        else refreshDetailsForAgents();
    }
    
    function refreshDetailsForAirlines() {
        hideError();
        var country = $(".countryFilter").val();
        var frequency = $("#frequencyFilter").val();
        var operationType = $("#typeFilter").val();
        var currency = $("#currencyFilter").val();
        var billingPeriod = $("#billingPeriodFilter").val();
        // validate country and operationtype
        if (country=='') {
            showError("{!$Label.ISSP_OperationalCalendar_Country_Filter_Required}");
            return;
        }
        if (operationType=='') {
            showError("{!$Label.ISSP_OperationalCalendar_BSPCASS_Filter_Required}");
            return;
        }
        console.log("country: " + country + " frequency: " + frequency + " operationType: " + operationType + " currency: " + currency);
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.ISSP_OperationalCalendarController.loadDetailsRemoteForAirlines}',
            country, frequency, operationType, currency, billingPeriod,
            function(result, event){
                if (event.status) {
                    setTableDetails($.parseJSON(result), operationType);
                } else if (event.type === 'exception') {
                    showError(event.message);
                } else {
                    console.log('Unknown error in refreshDetails result: ' + unescape(result));
                }
            }, 
            {escape: false}
        );
    }
    
    function refreshDetailsForAgents() {
        hideError();
        var billingPeriod = $("#billingPeriodFilter").val();
        console.log("billingPeriod: " + billingPeriod);
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.ISSP_OperationalCalendarController.loadDetailsRemoteForAgents}',
            billingPeriod,
            function(result, event){
                if (event.status) {
                    setTableDetails($.parseJSON(result), defaultOperationType);
                } else if (event.type === 'exception') {
                    showError(event.message);
                } else {
                    console.log('Unknown error in refreshDetails result: ' + unescape(result));
                }
            }, 
            {escape: false}
        );
    }
    
    function setTableDetails(listLines, operationType){
        var table = $('.table-pagination').DataTable();
        //remove existing details
        table.clear();
        var isCASS = operationType.includes("CASS");
        if (isAirline) {
            table.column(3).visible(isCASS);
            table.column(4).visible(isCASS);
            table.column(5).visible(isCASS);
            table.column(6).visible(isCASS);
        } else {
            table.column(3).visible(isCASS);
            table.column(4).visible(isCASS);
        }
        // add new lines to table
        table.rows.add(listLines).draw();
    }
    
    function showError(message) {
        $("#errormessage")
            .text(message)
            .show();
    }
    function hideError(message) {
        $("#errormessage").hide();
    }
    function showCalendar() {
        var href="/ISSP_OperationalCalendar?MainNav=resources&subNav=OperationalCalendar&mid=M2S4";
        window.location.href = href;
    }
    
    function getExportFileName() {
        var filename = "{!$Label.ISSP_OperationalCalendar}";
        filename += "_" + $(".countryFilter option:selected").text();
        filename += "_" + $("#typeFilter option:selected").text();
        if ($("#frequencyFilter").val()!="") {
            filename += "_" + $("#frequencyFilter option:selected").text();
        }
        if ($("#currencyFilter").val()!="") {
            filename += "_" + $("#currencyFilter option:selected").text();
        }
        filename += "_" + $("#billingPeriodFilter option:selected").text();
        console.log("filename " + filename);
        return filename;
    }
</script>

