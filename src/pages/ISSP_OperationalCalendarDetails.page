    function prepopulate(fromId, toId) {
        var fromVal = $(fromId).val();
        if(fromVal) {
            var elem = $("#left-opt-"+toId+" option[value='"+fromVal+"']");
            if(elem) {
                var selectedVal = $(elem).detach();
                $(selectedVal).appendTo("#right-opt-"+toId);    
            }
        }
    }

