    function openCustomFilters() {
        $('#custom-filters').modal('show'); 
        moveAll("#right-opt-operation-filter", "#left-opt-operation-filter", "value");
        moveAll("#right-opt-remittance-filter", "#left-opt-remittance-filter", "value");
