    <script>
        function isNumberKey(evt) {
            var keycode;

            if (window.event)
                keycode = window.event.keyCode;
            else if (evt)
                keycode = (evt.which) ? evt.which : event.keyCode;
            else
                return true;

            if (keycode == 13)
                keyPressValidation();
            else if (keycode > 31 && (keycode < 48 || keycode > 57))
                return false;

            return true;
        }
    </script>
    

    
