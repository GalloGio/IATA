    <decisions>
        <name>has_been_relaunched</name>
        <label>has been relaunched ?</label>
        <locationX>305</locationX>
        <locationY>52</locationY>
        <defaultConnector>
            <targetReference>Get_Record_Type_ARBC</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>first execution</defaultConnectorLabel>
        <rules>
            <name>second_execution</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>FlowHasBeenRelaunched</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
