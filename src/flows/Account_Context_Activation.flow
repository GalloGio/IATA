    <actionCalls>
        <name>FlowGetBusinessContextsInvocable</name>
        <label>Get Available Business Context</label>
        <locationX>533</locationX>
        <locationY>51</locationY>
        <actionName>FlowGetBusinessContextsInvocable</actionName>
        <actionType>apex</actionType>
        <connector>
            <targetReference>Business_context_available</targetReference>
        </connector>
        <inputParameters>
            <name>useCase</name>
            <value>
                <stringValue>BC</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>accountId</name>
            <value>
                <elementReference>AccountId</elementReference>
            </value>
        </inputParameters>
        <outputParameters>
            <assignToReference>BusinessContextAvailable</assignToReference>
            <name>picklistValues</name>
        </outputParameters>
    </actionCalls>
    <constants>
        <name>BUSINESS_CONTEXT_EAF</name>
        <dataType>String</dataType>
        <value>
            <stringValue>E&amp;F</stringValue>
        </value>
    </constants>
    <decisions>
        <name>Business_context_available</name>
        <label>Business context available ?</label>
        <locationX>525</locationX>
        <locationY>392</locationY>
        <defaultConnector>
            <targetReference>Business_context_selection</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>can choose a context</defaultConnectorLabel>
        <rules>
            <name>no_business_context</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>BusinessContextAvailable</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>No_business_context_available_screen</targetReference>
            </connector>
            <label>no business context</label>
        </rules>
    </decisions>
    <decisions>
        <name>E_F_Business_Context</name>
        <label>E&amp;F Business Context ?</label>
        <locationX>274</locationX>
        <locationY>547</locationY>
        <defaultConnectorLabel>Unrecognized Context</defaultConnectorLabel>
        <rules>
            <name>E_F_Context</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>SelectedBusinessContext</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>BUSINESS_CONTEXT_EAF</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>E_F_Subflow</targetReference>
            </connector>
            <label>E&amp;F Context</label>
        </rules>
    </decisions>
    <decisions>
        <name>Is_Authority</name>
        <label>Is Authority ?</label>
        <locationX>313</locationX>
        <locationY>52</locationY>
        <defaultConnector>
            <targetReference>FlowGetBusinessContextsInvocable</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>authority account</defaultConnectorLabel>
        <rules>
            <name>branch</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Account.Hierarchy_Level__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Branch</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Account_Context_Activation_Error</targetReference>
            </connector>
            <label>branch</label>
        </rules>
        <rules>
            <name>airport</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Account.RecordTypeDeveloperName__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Airport</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Account_Context_Activation_Error</targetReference>
            </connector>
            <label>airport</label>
        </rules>
    </decisions>
    <description>Allows user to send the account to SAP then EMS. First, it look at user custom permission, with a custom metadata &quot;Business Context Activation&quot;,  it will then validate some required fields before hitting touchpoint.</description>
