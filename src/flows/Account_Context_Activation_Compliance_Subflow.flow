        <locationX>552</locationX>
        <locationY>459</locationY>
        <defaultConnector>
            <targetReference>Notify_Flow_Launcher</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>is_compliant_after_case_closed</name>
