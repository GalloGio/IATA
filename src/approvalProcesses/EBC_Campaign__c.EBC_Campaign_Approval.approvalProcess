<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>Owner</field>
        <field>EBC_Design__c</field>
        <field>EBC_Master_Filter__c</field>
        <field>EBC_Selected_Template__c</field>
        <field>From_Name__c</field>
        <field>Google_Analytics_Tracking_Code__c</field>
        <field>Is_Google_Analytics_Tracker_Active__c</field>
        <field>Scheduled_Date__c</field>
        <field>Status__c</field>
        <field>Subject__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>EBC_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>!Billing_Account__r.eBroadcast_Trusted_Sender__c</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Auto approve trusted senders</label>
        <name>Auto_approve_trusted_senders</name>
    </approvalStep>
    <emailTemplate>EBC/EBC_Campaign_Pending_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Campaign_set_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EBC_Approval_Email</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Campaign_set_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Campaign_set_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>eBroadcast Campaign Approval</label>
    <recallActions>
        <action>
            <name>Campaign_set_back_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
