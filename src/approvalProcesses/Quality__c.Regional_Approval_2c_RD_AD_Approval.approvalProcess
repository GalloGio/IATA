            </action>
            <action>
                <name>RQM_Rejection</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval step 2 with RD AD Approval Required for Urgent / One-off</description>
    <emailTemplate>Quality/Request_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quality__c.Status__c</field>
