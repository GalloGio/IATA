<aura:component controller="LiveAgentChatButton" implements="forceCommunity:availableForAllPageTypes" access="global">

    <aura:attribute name="organizationId" type="String" required="true" />
    <aura:attribute name="deploymentUrl" type="String" required="true" />
    <aura:attribute name="endpoint" type="String" required="true" />
    <aura:attribute name="deploymentId" type="String" required="true" />
    <aura:attribute name="chatButtontId" type="String" required="true" />
    <aura:attribute name="liveAgentOnlineDefault" type="String" />
    <aura:attribute name="liveAgentOnlineWithCountry" type="String" />
    <aura:attribute name="liveAgentOnlineNoCountry" type="String" />
    <aura:attribute name="onlineText" type="String" required="true" default="" />
    <aura:attribute name="offlineText" type="String" required="true" default="No Chat" />
    <aura:attribute name="isInvalidInput" type="Boolean" />
    <aura:attribute name="liveAgentOnlineDefaultIdLanguage" type="String" />
    <aura:attribute name="liveAgentOnlineWithCountryLanguage" type="String" />
    <aura:attribute name="liveAgentOnlineNoCountryLanguage" type="String" />
    <aura:attribute name="isTopicLiveAgent" type="Boolean" default="false" />
    <aura:attribute name="isNoCountryLiveAgent" type="Boolean" default="false" />
    <aura:attribute name="isWithCountryLiveAgent" type="Boolean" default="false" />
    <aura:attribute name="showOptions" type="Boolean" default="false"/>
    <aura:attribute name="userSessionData" type="Boolean" default="true" />
    <aura:attribute name="contact" type="Contact" />
    <aura:attribute name="loaded" type="Boolean" default="false" />

    <ltng:require scripts="{!$Resource.jquery_3_4_0_min + '/jquery_3_4_0_min.js'}" afterScriptsLoaded="{!c.doInit}" />

    <aura:if isTrue="{!v.isInvalidInput}">
        <ui:message title="Warning" severity="warning" closable="false">
            Live Agent Chat Button configuration data is empty.
        </ui:message>
    </aura:if>

    <aura:if isTrue="{!v.loaded}">
        <lightning:spinner alternativeText="Loading" style="height:250vh;" />
    </aura:if>

    <div class="slds-grid slds-grid_align-center">

        <div class="slds-col slds-size_2-of-3 slds-large-size_2-of-3 slds-medium-size_1-of-1 slds-small-size_1-of-1">
            <div class="customCard">

                <c:portalSupportReachUsTest onfilterChange="{!c.handlefilterChangeEvent}"
                    ontoggleSpinner="{!c.toggleSpinner}" onshowoptions="{!c.showoptions}"
                    oncloseoptions="{!c.closeoptions}" />

                <aura:if isTrue="{!v.showOptions}">
                    <ltng:require scripts="{!$Resource.deployment}" />
                    <div class="slds-text-align_center slds-p-vertical_xx-large">
                        <h1 class="text-large text-bold">{!$Label.c.csp_Support_Label}</h1>
                        <h2 class="text-xsmall slds-p-top_small">{!$Label.c.csp_Options_Label}</h2>
                    </div>
                    <div class="slds-p-bottom_xx-large lower_gray_panel_half_border">
                        <div class="slds-p-vertical_large slds-text-align_center">
                            <h2 class="text-medium text-bold">{!$Label.c.csp_Suggestion_label}</h2>
                        </div>
                        <div class="slds-p-top_large">
                            <div
                                class="slds-grid grid-margin-bottom-justified slds-grid_vertical slds-align_absolute-center lower_panel_size">
                                <div class="slds-col column-backgroundwhite-textblack-aligned-wborder slds-size_2-of-2 slds-small-size_2-of-2 
                                                            slds-medium-size_2-of-2 slds-large-size_4-of-6
                                                            slds-m-bottom_large 
                                                            cursorPointer customCardWhite">
                                    <div class="noPointerEvents slds-p-around_small 
                                                        slds-text-align_left text-small">
                                        Lorem ipsum dolor sit amet
                                        <lightning:icon iconName="utility:forward" size="xx-small"
                                            class="tileNewServiceIcon slds-current-color blue_arrow slds-float_right">
                                        </lightning:icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="slds-grid grid-margin-bottom-justified slds-wrap slds-p-bottom_xx-large slds-align_absolute-center ">
                        <div class="slds-col column-backgroundwhite-textblack-aligned-wborder slds-size_1-of-2 slds-small-size_1-of-3 
                                            slds-medium-size_1-of-3 slds-large-size_1-of-8 
                                            slds-m-horizontal_small customCard" style="height: 170px; width: 250px;">
                            <div class="slds-text-title_bold noPointerEvents slds-p-around_small ">
                                {!$Label.c.csp_Case_Panel_label}
                            </div>
                            <div class="noPointerEvents slds-p-around_small">
                                {!$Label.c.csp_Case_Panel_sub_label}
                            </div>
                            <lightning:button label="Click Me!"
                                class="containedButton cursorPointer slds-medium-size_1-of-3">
                            </lightning:button>
                        </div>

                        <div class="slds-col column-backgroundwhite-textblack-aligned-wborder slds-size_1-of-2 slds-small-size_1-of-3 
                                slds-medium-size_1-of-3 slds-large-size_1-of-8 
                                slds-m-horizontal_small customCard" style="height: 170px; width: 250px;">
                            <div class="slds-text-title_bold noPointerEvents slds-p-around_small ">
                                {!$Label.c.csp_Chat_Panel_label}
                            </div>
                            <div class="noPointerEvents slds-p-around_small">
                                {!$Label.c.csp_Chat_Panel_sub_label}
                            </div>
                            <div class="slds-grid">
                                <aura:if isTrue="{!v.isNoCountryLiveAgent}">
                                    <div id="btnContainer1"
                                        class="slds-col slds-size_1-of-3 selfServiceContactSupport forceCommunityCreateRecordButton">
                                        <div class="sButton">
                                            <button aura:id="liveAgentOnlineNoCountryId" id="liveAgentOnlineNoCountryId"
                                                class="containedButtonLiveAgent uiButton contactSupport "
                                                style="display:none;" onclick="{!c.startChatNoLanguage}">
                                                {!v.liveAgentOnlineNoCountryLanguage}
                                            </button>
                                            <button aura:id="liveAgentOfflineNoCountryId"
                                                id="liveAgentOfflineNoCountryId"
                                                class="containedButtonLiveAgent uiButton contactSupport disabled"
                                                style="display:none;">
                                                {!v.offlineText}
                                            </button>
                                        </div>
                                    </div>
                                </aura:if>
                                <aura:if isTrue="{!v.isWithCountryLiveAgent}">
                                    <div id="btnContainer2"
                                        class="slds-col slds-size_1-of-3 selfServiceContactSupport forceCommunityCreateRecordButton">
                                        <div class="sButton">
                                            <button aura:id="liveAgentOnlineWithCountryId"
                                                id="liveAgentOnlineWithCountryId"
                                                class="containedButtonLiveAgent uiButton contactSupport "
                                                onclick="{!c.startChatWithLanguage}" style="display:none;">
                                                {!v.liveAgentOnlineWithCountryLanguage}
                                            </button>
                                            <button aura:id="liveAgentOfflineWithCountryId"
                                                id="liveAgentOfflineWithCountryId"
                                                class="containedButtonLiveAgent uiButton contactSupport disabled"
                                                style="display:none;">
                                                {!v.offlineText}
                                            </button>
                                        </div>
                                    </div>
                                </aura:if>
                                <aura:if isTrue="{!v.isTopicLiveAgent}">
                                    <div id="btnContainer"
                                        class="slds-col slds-size_1-of-3 selfServiceContactSupport forceCommunityCreateRecordButton">
                                        <div class="sButton">
                                            <button id="liveAgentOnlineDefaultId" aura:id="liveAgentOnlineDefaultId"
                                                style="display:none;"
                                                class="containedButtonLiveAgent uiButton contactSupport"
                                                onclick="{!c.startChatDefault}">
                                                {!v.liveAgentOnlineDefaultIdLanguage}
                                            </button>
                                            <button id="liveAgentOfflineDefaultId" aura:id="liveAgentOfflineDefaultId"
                                                class="containedButtonLiveAgent uiButton contactSupport disabled"
                                                style="display:none;">
                                                {!v.offlineText}
                                            </button>
                                        </div>
                                    </div>
                                </aura:if>
                            </div>

                        </div>
                    </div>
                </aura:if>

            </div>
        </div>
    </div>



</aura:component>