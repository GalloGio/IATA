<aura:component description="Service_Notification" implements="forceCommunity:availableForAllPageTypes" access="global">

    <aura:attribute name="header" type="String" access="public"/>
    <aura:attribute name="bodyText" type="String"  access="public"/>

    <div class="messageContent">


        <div class="bodyHeader">
            <p>{! v.header}</p>
        </div>

        <div class="bodyText">
            <lightning:formattedRichText value="{! v.bodyText}"></lightning:formattedRichText>
        </div>
    </div>

</aura:component>