<aura:component extends="c:Base" implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes,force:hasRecordId,force:appHostable" access="global" controller="OneId_Fred_AccountSelection_CTRL">

	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
  <aura:handler name="render" value="{!this}" action="{!c.onRender}"/>
  <aura:registerEvent name="sendParams" type="c:oneIdURLParams"/>
  <aura:registerEvent name="StepCompletionNotification" type="c:OneId_StepCompletion_EVT"/>
<!-- INTPUT -->
  <aura:attribute name="serviceName" type="String" />
  <aura:attribute name="label" type="String" access="public"/>

<!-- INTERNAL ATTRIBUTES -->
	<aura:attribute name="response" type="Object[]" access="private"/>
	<aura:attribute name="customerTypesByServiceName" type="Object[]" access="private"/>
	
  <aura:attribute name="customerType" type="String" access="private"/>
  <aura:attribute name="userInput" type="String" access="private"/>
  <aura:attribute name="isValid" type="Boolean" default="false" access="private"/>
  <aura:attribute name="accountSelected" type="Boolean" default="false" access="private"/>

  <aura:attribute name="acc" type="Account" access="private"/>
  <aura:attribute name="contact" type="Contact" access="public"/>
  <aura:attribute name="searchPlaceholder" type="String" default="Please enter an account name"/>

  <aura:attribute name="suggestionBoxHeight" type="Integer" default="0"/>
  <aura:attribute name="totalResult" type="Integer" />
  <aura:attribute name="isFredPrimaryUser" type="Boolean" default="false" />
  <aura:attribute name="createPrimary" type="Boolean" default="false" />
  
  <aura:attribute name="isGuest" type="Boolean" default="true" />
  <aura:attribute name="paramLoaded" type="Boolean" default="false" />
  <aura:attribute name="userTypeToCreate" type="Integer" default="-1"/> <!-- 1=PRIMARY or 2=SECONDARY -->
  <aura:attribute type="Boolean" name="searching" default="false" access="private" />
  <aura:attribute name="isInvitation" type="Boolean" default="false" />

  <aura:attribute name="invitationId" type="String" /> <!-- invitation id in the url -->
  

  
<!-- OUTPUT -->
  <aura:method name="isComponentValid" action="{!c.isComponentValid}" description="Return true or false if input is valid" /> 

<!-- BODY -->
<div style="margin-bottom: 10px;">

	<div class="slds-col--padded slds-p-bottom--large slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-1">    
		<label class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Type Of User</label>
	    <ui:inputSelect aura:id="typeOfCustomer" class="slds-input required-input" required="true" value="{!v.customerType}" change="{!c.typeOfCustomerChanged}">
            <ui:inputSelectOption text="" label="{!$Label.c.OneId_Fred_Select_Type_of_Company}"/>
	    		<!-- Get customer type depeding on service name in URL  -->          
	            <aura:iteration items="{!v.customerTypesByServiceName}" var="customerType">
             		<ui:inputSelectOption text="{!customerType.label}" label="{!customerType.value}"/>
        		</aura:iteration>
	    </ui:inputSelect>
	</div>

<div class="slds-col--padded slds-p-bottom--large slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-1">

<div style=" ">
  <div class="slds-form-element">
    <label class="slds-form-element__label" for="combobox-unique-id-21">{!v.label}</label>
    <div class="slds-form-element__control">
      <div class="slds-combobox_container slds-has-inline-listbox slds-has-input-focus">
        <div class="slds-combobox slds-dropdown-trigger_click" aura:id="agencies" aria-expanded="true" aria-haspopup="listbox" role="combobox">
          <div class="slds-combobox__form-element slds-input-has-icon slds-input-has-icon_right" role="none">
           

         <aura:if isTrue="{!v.isFredPrimaryUser || v.invitationId != undefined}" >
            <lightning:input  aura:id="AI_userInput2" type="text" class="slds-input slds-combobox__input" value="{!v.userInput}" disabled="true"/>
            <aura:set attribute="else">
               <input aura:id="AI_userInput" type="text" class="slds-input slds-combobox__input" id="combobox-unique-id-32" aria-autocomplete="list" aria-controls="listbox-unique-id" autocomplete="off" role="textbox" placeholder="{!v.searchPlaceholder}"  onkeyup="{!c.onKeyUp}" value="{!v.userInput}" data-value="agencies" disabled="{!disableInput}"/>

               <span class="slds-icon_container slds-icon-utility-search slds-input__icon slds-input__icon_right">
                    <aura:if isTrue="{!v.searching}">
                        <lightning:spinner size="small"/>
                        <aura:set attribute="else">
                            <lightning:icon iconName="utility:search" size="x-small"/>
                        </aura:set>
                    </aura:if>
                </span>

            </aura:set>
          </aura:if>

          </div>

          <div id="listbox-unique-id" role="listbox">
            <ul aura:id="suggestionBoxID" id="suggestionBoxID" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid suggestionBox" role="presentation">

                


<!-- Aircraft Operator -with card version--> 
<aura:if isTrue="{!v.customerType == 'Aircraft Operator'}">
  <aura:iteration items="{!v.response}" var="account" indexVar="index">
  <li role="presentation" class="slds-listbox__item">
                    <article class="slds-card">
                      <div class="slds-card__body slds-card__body_inner">
                      	<div class="slds-grid slds-wrap slds-grid_pull-padded">
	                      <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
	                        <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}"><span class="slds-form-element__label columnTitle">COMMERCIAL NAME: </span><span class="columnValue">{!account.Name} </span>
	                        </span>
	                    </div>
	                      <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
	                         <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}"><span class="slds-form-element__label columnTitle">IATA CODE: </span><span class="columnValue">{!account.Airline_designator__c} </span>
	                                            </span>
	                      </div>
	                      <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
	                        <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}"><span class="slds-form-element__label columnTitle">ICAO CODE: </span><span class="columnValue">{!account.X8585_Code__c}</span>
	                                            </span>
	                      </div>                        
	                      <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
	                       <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}">
	                          <span class="slds-form-element__label columnTitle">ICAO MEMBER STATE: </span><span class="columnValue">{!account.IATA_ISO_Country__r.fred_icaomemberstate__r.IATA_ISO_Country__r.ISO_Code__c}
	                          </span>
	                        </span>
	                      </div>
	                  </div>
    
                    </div>
                </article>

</li>
</aura:iteration>
</aura:if>

 
<!-- ICAO Member State -with card version-->
<aura:if isTrue="{!v.customerType == 'ICAO Member State'}">
  <aura:iteration items="{!v.response}" var="account" indexVar="index">
  <li role="presentation" class="slds-listbox__item">
                <article class="slds-card">
                  <div class="slds-card__body slds-card__body_inner">
                    <div class="slds-grid slds-wrap slds-grid_pull-padded">
                  <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
                    <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}"><span class="slds-form-element__label columnTitle">STATE NAME: </span><span class="columnValue">{!account.Name}
                    </span></span>
                </div>
                  <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 slds-medium-size_1-of-2 slds-small-size_1-of-1">
                     <span class="slds-listbox__option-text slds-listbox__option-text_entity" onclick="{!c.suggestionSelected}" data-value="{!account.Name}" data-row-index="{!index}"><span class="slds-form-element__label columnTitle">ISO 2 CODE: </span><span class="columnValue"> {!account.IATA_ISO_Country__r.ISO_Code__c}
                                        </span></span>
                  </div>
                  </div>

                </div>
            </article>
         </li>
     </aura:iteration>
</aura:if>

<aura:if isTrue="{!v.response.length &lt; v.totalResult}">
              <li role="presentation" class="slds-listbox__item lastRowInfo">
                  <div id="listbox-option-unique-id-01" class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta contactUsSuggestion" role="option" >
                  		<span class="find">First 20 results shown over {!v.totalResult}. Please refine your search</span>
                  </div>
                </li>
              </aura:if>

 <aura:if isTrue="{!v.customerType != 'ICAO Member State'}">
              <li role="presentation" class="slds-listbox__item lastRow">
                  <div id="listbox-option-unique-id-01" class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta contactUsSuggestion" role="option" >
                    
                    <span class="find">Can't find your Aircraft Operator? <a class="contactUs" href="#" onclick="{! c.goToContactUs }">Contact Us</a></span>
                   
                  </div>
                </li>

              </aura:if>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


<aura:if isTrue="{!v.accountSelected}">
  <div class="slds-col--padded slds-p-bottom--large slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-1 buttonStyle">
       <lightning:button variant="brand" label="{!$Label.site.submit}" onclick="{! c.submit}" class="submitBt" />
    </div>

</aura:if>



  <div class="slds-col--padded slds-p-bottom--large slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-1" style="{! 'height:'+v.suggestionBoxHeight+'px;'}">
  </div>



</div>
</div>

<lightning:spinner aura:id="mySpinner" variant="brand" class="slds-hide"/>

</aura:component>