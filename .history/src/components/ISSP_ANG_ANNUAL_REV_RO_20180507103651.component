            <apex:facet name="header">
                <apex:outputpanel>Status</apex:outputpanel>
            </apex:facet>

            <apex:pageBlockSectionItem>
                <apex:outputLabel value="{! $Label.ISSP_AMS_MSO_GSA_IATA_Code}" />
                <apex:outputField value="{!helper.currentAccount.IATACode__c}" />
