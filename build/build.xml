<target name="compressProfiles">
 <for param="file">
  <path>
   <fileset dir="src/profiles"  />
  </path>
  <sequential>
   <var name="name" unset="true"/>
   <basename file="@{file}" property="name" />
   <echo message=" ${name}"/>
           <exec executable = "perl">
         <arg value = "-pi"/>
            <arg value = "build/profileCompress.pl"/>
            <arg value = "src/profiles/${name}"/>
        </exec>
  </sequential>
 </for>              
</target>

<target name="compressPermissionSets">
 <for param="file">
  <path>
   <fileset dir="src/permissionsets"  />
  </path>
  <sequential>
   <var name="name" unset="true"/>
   <basename file="@{file}" property="name" />
   <echo message=" ${name}"/>
           <exec executable = "perl">
           <arg value = "-pi"/>
            <arg value = "build/profileCompress.pl"/>
            <arg value = "src/permissionsets/${name}"/>
        </exec>
  </sequential>
 </for>              
</target>



